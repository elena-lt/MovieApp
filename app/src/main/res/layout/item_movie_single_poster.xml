<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="movie" type="com.movieapp.models.Movie"/>
    </data>

        <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/moviePoster"
                app:setImageUrl="@{@string/image_base_url_w500(movie.poster_path)}"
                android:layout_width="125dp"
                android:layout_height="166dp"
                android:layout_marginBottom="3dp" android:layout_marginTop="2dp"
                android:layout_marginStart="2dp" android:layout_marginEnd="2dp"
                tools:src="@drawable/godzilla_poster"
                android:scaleType="centerCrop"/>

</layout>